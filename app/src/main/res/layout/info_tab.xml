<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="model"
            type="org.kinecosystem.kinit.viewmodel.info.InfoViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/delim_top"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="308dp"
            android:background="#d7dce9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="4sp"
            android:text="@string/support"
            android:textColor="#7884a5"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/delim_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delim_top" />

        <TextView
            android:id="@+id/email_support"
            style="@style/Button.Blue.Wide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:onClick="@{model::onContactSupportClicked}"
            android:text="@string/email_us"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/delim_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delim_top" />


        <View
            android:id="@+id/delim_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="232dp"
            android:background="#d7dce9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            android:text="@{model.version}"
            android:textColor="#a4acc2"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_settings"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|left"
            android:letterSpacing="0.06"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingTop="6dp"
            android:text="Security"
            android:textColor="@color/grey_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/delim0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="88dp" />

        <TextView
            android:id="@+id/supportheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_settings"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|left"
            android:letterSpacing="0.06"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingTop="6dp"
            android:text="Support"
            android:textColor="@color/grey_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/delim0" />

        <View
            android:id="@+id/delim1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="201dp" />


    </android.support.constraint.ConstraintLayout>
</layout>