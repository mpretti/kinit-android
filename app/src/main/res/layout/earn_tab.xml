<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="model"
            type="org.kinecosystem.kinit.viewmodel.earn.EarnViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/balance_height"
            android:background="@color/status_bar_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/balance_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|start"
            android:text="@{model.balance}"
            android:textColor="@color/balance_text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/balance"
            app:layout_constraintTop_toTopOf="@id/balance"
            tools:text="200"/>

        <TextView
            android:id="@+id/kin_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="center|start"
            android:text="KIN"
            android:textColor="@color/balance_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/balance_text"
            app:layout_constraintStart_toEndOf="@+id/balance_text"
            app:layout_constraintTop_toTopOf="@+id/balance_text"
            tools:text="KIN"/>
        <ImageView
            android:id="@+id/kin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="@+id/kin_currency"
            app:layout_constraintStart_toEndOf="@+id/kin_currency"
            app:layout_constraintTop_toTopOf="@+id/kin_currency"
            app:srcCompat="@drawable/k_letter"/>

        <ImageView
            android:id="@+id/author_image"
            android:layout_width="@dimen/author_image_size_width"
            android:layout_height="@dimen/author_image_size_height"
            android:layout_marginTop="24dp"
            android:maxHeight="@dimen/author_image_size_height"
            android:scaleType="centerInside"
            android:src="@drawable/place_holder_rounded_rec_grey"
            android:visibility="@{model.getShouldShowTask}"
            app:imageUrl="@{model.authorImageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance"
            tools:src="@mipmap/ic_launcher_app"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/author_name"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@{@string/by_author(model.authorName)}"
            android:textColor="#d2d7e1"
            android:textSize="14sp"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:layout_constraintVertical_chainStyle="spread_inside"
            tools:text="By Kik"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:text="@{model.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#5c6786"
            android:textSize="22sp"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author_image"
            tools:text="some title"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/subtitle"
            android:textStyle="normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            android:maxLines="5"
            android:text="@{model.description}"
            android:textColor="#7884a5"
            android:textSize="16sp"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="some description"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/start_task_btn"
            style="@style/Button.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="34dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"
            android:onClick="@{()->model.startTask()}"
            android:text="@{model.isTaskStarted() ? @string/resume : @string/start_earn_kin}"
            android:textSize="16sp"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_horizontal_guide_line"
            tools:text="@string/start_earn_kin"
            tools:visibility="visible"/>
        <ImageView
            android:id="@+id/amount_kin_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/task_icon_size"
            android:scaleType="centerInside"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintBottom_toTopOf="@+id/bottom_delimiter"
            app:layout_constraintEnd_toStartOf="@+id/center_guide_line"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/mid_horizontal_guide_line"
            app:srcCompat="@drawable/kin_coins"
            tools:visibility="visible"/>
        <ImageView
            android:id="@+id/timer_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/task_icon_size"
            android:scaleType="centerInside"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/center_guide_line"
            app:layout_constraintTop_toTopOf="@+id/amount_kin_icon"
            app:srcCompat="@drawable/time_icon"
            tools:visibility="visible"/>

        <View
            android:id="@+id/top_delimiter"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:background="#d7dce9"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintBottom_toTopOf="@+id/amount_kin_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/timer_icon"
            app:layout_constraintVertical_bias="1.0"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/reward_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@{model.isQuiz ? @string/kin_reward_upto(model.kinReward) : @string/kin_reward(model.kinReward)}"
            android:textColor="#7884a5"
            android:textSize="16sp"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintEnd_toEndOf="@+id/amount_kin_icon"
            app:layout_constraintStart_toStartOf="@+id/amount_kin_icon"
            app:layout_constraintTop_toBottomOf="@+id/amount_kin_icon"
            tools:text="250 KIN"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/complete_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@{@string/min_to_complete(model.minToComplete)}"
            android:textColor="#7884a5"
            android:textSize="16sp"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintEnd_toEndOf="@+id/timer_icon"
            app:layout_constraintStart_toStartOf="@+id/timer_icon"
            app:layout_constraintTop_toBottomOf="@+id/timer_icon"
            tools:text="2 Min."
            tools:visibility="visible"/>


        <View
            android:id="@+id/bottom_delimiter"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:background="#d7dce9"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintBottom_toTopOf="@id/bottom_horizontal_guide_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/complete_duration_text"
            tools:visibility="visible"/>

        <View
            android:id="@+id/middle_delimiter"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#d7dce9"
            android:visibility="@{model.getShouldShowTask}"
            app:layout_constraintBottom_toTopOf="@+id/bottom_delimiter"
            app:layout_constraintEnd_toStartOf="@id/bottom_delimiter"
            app:layout_constraintStart_toEndOf="@id/top_delimiter"
            app:layout_constraintTop_toBottomOf="@+id/top_delimiter"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/next_task_availability_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            android:text="@{model.isAvailableTomorrow() ? @string/next_task_available_tomorrow : @string/next_task_available_on(model.nextAvailableDate())}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#1693f3"
            android:textSize="22sp"
            android:visibility="@{model.getShouldShowTaskNotAvailableYet()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/balance"
            tools:text="Next earning experience will be available tomorrow."
            tools:visibility="gone"/>

        <ImageView
            android:id="@+id/next_experience_image"
            android:layout_width="194dp"
            android:layout_height="171dp"
            android:layout_marginTop="86dp"
            android:scaleType="centerInside"
            android:src="@drawable/next_experience"
            android:visibility="@{model.getShouldShowTaskNotAvailableYet}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/next_task_availability_title"
            tools:visibility="gone"/>

        <TextView
            android:id="@+id/next_experience_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3sp"
            android:text="@string/next_task_subtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:textColor="#d7dce9"
            android:textSize="14sp"
            android:visibility="@{model.getShouldShowTaskNotAvailableYet}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/next_experience_image"
            tools:text="We are currently growing your next task"
            tools:visibility="gone"/>
        <android.support.constraint.Guideline
            android:id="@+id/mid_horizontal_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.62"/>
        <android.support.constraint.Guideline
            android:id="@+id/bottom_horizontal_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.82"/>
        <android.support.constraint.Guideline
            android:id="@+id/center_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="32dp"/>
        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="32dp"/>

        <ImageView
            android:id="@+id/no_tasks_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/sowing_illustration"
            android:visibility="@{model.shouldShowNoTask}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance"
            tools:visibility="gone"/>
        <TextView
            android:id="@+id/no_tasks_title"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/no_tasks_title"
            android:textColor="#7884a5"
            android:textSize="16sp"
            android:visibility="@{model.shouldShowNoTask}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_tasks_image"
            tools:visibility="gone"/>
        <TextView
            android:id="@+id/no_tasks_subtitle"
            android:textStyle="normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3sp"
            android:text="@string/no_tasks_subtitle"
            android:textColor="#a4acc2"
            android:textSize="14sp"
            android:visibility="@{model.shouldShowNoTask}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_tasks_title"
            tools:visibility="gone"/>


    </android.support.constraint.ConstraintLayout>
</layout>